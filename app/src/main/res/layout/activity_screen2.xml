<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen2"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="2"
    >

    <TextView

        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="SignUp"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginLeft="260dp"

        />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pic"
    android:orientation="vertical"
android:weightSum="8"
    >

        <ImageView
            android:layout_width="260dp"
            android:layout_height="305dp"
            android:layout_below="@id/sign"
            android:layout_alignParentStart="true"

            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="4"
            android:padding="60dp"
            android:src="@drawable/musifylogo1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/pic"
        android:layout_marginTop="-90dp"
        android:text="Musify"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        android:textSize="40sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_weight="1"
        android:layout_width="350dp"
        android:id="@+id/layoutt"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Name"
        android:textColorHint="@color/darkyellow"
        android:layout_gravity="center">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@color/white"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_weight="1"
        android:layout_width="350dp"
        android:id="@+id/layoutt2"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:textColorHint="@color/darkyellow"
        android:layout_gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="textEmailAddress"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_weight="1"
        android:layout_width="350dp"
        android:id="@+id/layoutt3"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Password"

        android:textColorHint="@color/darkyellow"
        android:layout_gravity="center"
        app:endIconMode="password_toggle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_marginLeft="30dp"

        android:textSize="20dp"
        android:textColor="@color/yellow"
        />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
           >

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                >
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle"
                    />

                <ImageView

                    android:id="@+id/image1screen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/male2" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                >
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle"
                    />
                <ImageView
                    android:id="@+id/image2screen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/female2"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                >
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle"
                    />
                <ImageView
                    android:id="@+id/image3screen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/binary2"
                    />

            </RelativeLayout>



        </LinearLayout>

    <CheckBox
        android:id="@+id/cehckboxscreen2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
    android:text="I would like to recieve your newsletter and other promotional informations"
        android:textColor="@color/white"

        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonscreen2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/yellow"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>
</LinearLayout>


</LinearLayout>